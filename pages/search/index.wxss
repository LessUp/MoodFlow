.container { padding: 24rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 20rpx; }
.label { font-size: 28rpx; color: #555; margin-bottom: 12rpx; }
.input { width: 100%; background: #f7f7f7; border-radius: 12rpx; padding: 16rpx; box-sizing: border-box; }
.row { display: flex; align-items: center; gap: 12rpx; }
.picker { padding: 12rpx 16rpx; background: #f7f7f7; border-radius: 12rpx; min-width: 220rpx; text-align: center; }
.sep { color: #888; }
.emoji-grid { display: flex; flex-wrap: wrap; gap: 8rpx; }
.emoji { width: 60rpx; height: 60rpx; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; font-size: 36rpx; background: #f5f5f5; }
.emoji.on { background: #07c16022; border: 2rpx solid #07c160; }
.primary { background: #07c160; color: #fff; }
.plain { background: #eee; color: #333; }
.empty { text-align: center; color: #888; padding: 40rpx 0; }
.list { display: flex; flex-direction: column; }
.item { display: flex; align-items: center; justify-content: space-between; padding: 16rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.item .dk { font-size: 28rpx; color: #333; }
.item .note { font-size: 24rpx; color: #666; margin-top: 4rpx; }
.right { font-size: 36rpx; }

.theme-dark { background-color: #0f0f0f; color: #eee; }
.theme-dark .section { background: #161616; }
.theme-dark .label { color: #bbb; }
.theme-dark .input, .theme-dark .picker { background: #1c1c1c; color: #eee; }
.theme-dark .emoji { background: #1c1c1c; }
.theme-dark .emoji.on { background: #3ea76a22; border-color: #3ea76a; }
.theme-dark .item { border-bottom-color: #242424; }
