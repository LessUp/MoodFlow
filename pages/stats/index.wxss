.container { padding: 24rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 20rpx; }
.label { font-size: 28rpx; color: #555; margin-bottom: 12rpx; }
.value.large { font-size: 40rpx; color: #111; font-weight: 600; }
.grid { display: flex; flex-wrap: wrap; }
.cell { width: 25%; padding: 20rpx 0; display: flex; flex-direction: column; align-items: center; }
.emoji { font-size: 44rpx; }
.count { font-size: 26rpx; color: #666; margin-top: 8rpx; }
.empty { text-align: center; padding: 80rpx 20rpx; }
.empty-title { font-size: 36rpx; color: #333; }
.empty-tip { margin-top: 8rpx; font-size: 26rpx; color: #888; }
.seg { display: flex; gap: 12rpx; }
.seg-item { flex: 1; text-align: center; padding: 12rpx 0; background: #f5f5f5; border-radius: 12rpx; }
.seg-item.on { background: #07c160; color: #fff; }
.chart { width: 100%; height: 180px; margin-top: 8rpx; background: #fff; border-radius: 12rpx; }
.hint { color: #999; font-size: 22rpx; margin-top: 6rpx; }

.theme-dark { background-color: #0f0f0f; color: #eee; }
.theme-dark .section { background: #161616; }
.theme-dark .label { color: #bbb; }
.theme-dark .value.large { color: #eee; }
.theme-dark .count { color: #aaa; }
.theme-dark .seg-item { background: #1c1c1c; color: #bbb; }
.theme-dark .seg-item.on { background: #3ea76a; color: #fff; }
.theme-dark .chart { background: #161616; }
.theme-dark .hint { color: #777; }
